<script>

    function getState1(val) {
        
        
         
        $.ajax({
          method: "GET",
          url: "/r_sport",
          data: { region: val }
        })
          .done(function( msg ) {
            $("#r_sport").html(msg);
          });
    }
    
    
</script>
<script>
     function getState2(val) {
        
       var regions = $( "#select1 option:selected" ).text();


        $.ajax({
          method: "GET",
          url: "/r_sport",
          data: { region: regions, type2: val  }
        })
          .done(function( msg ) {
            $("#r_sport").html(msg);
          });
    }
    
</script>

